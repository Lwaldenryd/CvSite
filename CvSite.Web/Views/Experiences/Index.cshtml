@model IEnumerable<CvSite.Data.Entities.Experience>

<h2>Work experience</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add experience</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Company</th>
            <th>Role</th>
            <th>Period</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Company</td>
                <td>@item.Role</td>
                <td>
                    @item.StartDate.ToString("yyyy-MM")
                    -
                    @(item.EndDate?.ToString("yyyy-MM") ?? "Present")
                </td>
                <td>@item.Description</td>
            </tr>
        }
    </tbody>
</table>

