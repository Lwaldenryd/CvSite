@model CvSite.Web.Models.CvViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<CvSite.Web.Data.Entities.ApplicationUser> UserManager

@{
    ViewData["Title"] = "CV Details";
    var currentUserId = UserManager.GetUserId(User);
    var isOwner = currentUserId == Model.User.Id;
}

<div class="container mt-5">

    @if (isOwner)
    {
        <div class="p-4 mb-4 bg-white border border-primary rounded shadow-sm" style="border-width: 2px !important;">
            <h5 class="mb-3 fw-bold text-primary">Manage your CV</h5>
            <div class="d-flex flex-wrap gap-2">
                <a asp-controller="Profile" asp-action="Edit" class="btn btn-primary shadow-sm">Edit Profile</a>
                <a asp-controller="Competences" asp-action="Create" class="btn btn-success shadow-sm">+ Competence</a>
                <a asp-controller="Educations" asp-action="Create" class="btn btn-success shadow-sm">+ Education</a>
                <a asp-controller="Experiences" asp-action="Create" class="btn btn-success shadow-sm">+ Experience</a>
                <a asp-controller="Projects" asp-action="Index" class="btn btn-info text-white shadow-sm">Browse Projects</a>
            </div>
        </div>
    }
    else
    {
        <div class="mb-4 text-end">
            <a asp-controller="Messages" asp-action="Send" asp-route-receiverId="@Model.User.Id" class="btn btn-outline-dark shadow-sm">
                ✉️ Send message to @(string.IsNullOrEmpty(Model.User.FirstName) ? "user" : Model.User.FirstName)
            </a>
        </div>
    }

    <div class="row">
        
        <div class="col-md-4">
            <div class="card p-4 shadow-sm border-0 bg-light">
                @if (Model.User.ProfilePicture != null)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.User.ProfilePicture)"
                         class="img-fluid rounded-circle mb-3 mx-auto d-block shadow"
                         style="width: 180px; height: 180px; object-fit: cover;" />
                }
                else
                {
                    <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center mb-3 mx-auto shadow"
                         style="width: 180px; height: 180px;">
                        <i class="bi bi-person-fill" style="font-size: 5rem;">👤</i>
                    </div>
                }

                <h2 class="text-center fw-bold">@(string.IsNullOrEmpty(Model.User.FirstName) ? "Name not provided" : Model.User.FirstName + " " + Model.User.LastName)</h2>
                <hr />
                <p><strong>Address:</strong><br /> @(string.IsNullOrEmpty(Model.User.Address) ? "Not provided" : Model.User.Address)</p>
                <p><strong>Email:</strong><br /> @Model.User.Email</p>
            </div>
        </div>

       
        <div class="col-md-8 ps-md-5">
            
            <h3 class="fw-bold border-bottom pb-2 mb-3">Competence</h3>
            <div class="mb-5">
                @if (!Model.Competences.Any())
                {
                    <span class="text-muted italic">No competences added yet.</span>
                }
                @foreach (var comp in Model.Competences)
                {
                    <span class="badge bg-info text-dark p-2 px-3 me-2 mb-2 shadow-sm" style="font-size: 0.9rem;">@comp.Name</span>
                }
            </div>

            
            <h3 class="fw-bold border-bottom pb-2 mb-3">Education</h3>
            <div class="mb-5">
                @if (!Model.Educations.Any())
                {
                    <p class="text-muted italic">No education added yet.</p>
                }
                @foreach (var edu in Model.Educations)
                {
                    <div class="mb-3 border-start border-4 border-success ps-3">
                        <h5 class="mb-0 fw-bold">@edu.Subject</h5>
                        <div class="text-muted">@edu.Institution</div>
                    </div>
                }
            </div>

            
            <h3 class="fw-bold border-bottom pb-2 mb-3">Experience</h3>
            <div class="mb-5">
                @if (!Model.Experiences.Any())
                {
                    <p class="text-muted italic">No experiences added yet.</p>
                }
                @foreach (var exp in Model.Experiences)
                {
                    <div class="mb-3 border-start border-4 border-primary ps-3">
                        <h5 class="mb-0 fw-bold">@exp.Role</h5>
                        <div class="text-primary fw-bold">@exp.Company</div>
                    </div>
                }
            </div>



            <h3 class="fw-bold border-bottom pb-2 mb-3">Projects</h3>
            <div class="mb-5">
                @if (Model.ProjectMembers == null || !Model.ProjectMembers.Any())
                {
                    <p class="text-muted italic">Not participating in any projects yet.</p>
                }
                else
                {
                    @foreach (var membership in Model.ProjectMembers)
                    {
                        <div class="mb-3 border-start border-4 border-info ps-3 d-flex justify-content-between align-items-center">
                            <div>
                                @* Vi visar bara titeln och eventuell beskrivning snyggt *@
                                <h5 class="mb-0 fw-bold">@membership.Project?.Title</h5>
                                @if (!string.IsNullOrEmpty(membership.Project?.Description))
                                {
                                    <div class="text-muted small">
                                        @(membership.Project.Description.Length > 80
                                                                    ? membership.Project.Description.Substring(0, 80) + "..."
                                                                    : membership.Project.Description)
                        </div>
                                                }
                            </div>
                            <a asp-controller="Projects" asp-action="Details" asp-route-id="@membership.ProjectId" class="btn btn-sm btn-outline-info shadow-sm">
                                View Project
                            </a>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
