@using CvSite.Web.Data.Entities
@using Microsoft.AspNetCore.Identity
@model CvSite.Web.Data.Entities.Project
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Project Details";
    var currentUserId = UserManager.GetUserId(User);
    var isUserLoggedIn = User.Identity.IsAuthenticated;
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0">@Model.Title</h2>
            @if (isUserLoggedIn && Model.OwnerId == currentUserId)
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit Project</a>
            }
        </div>
        <div class="card-body">
            <h5>Description</h5>
            <p style="white-space: pre-line;">@Model.Description</p>
            <hr />

            <h5>Project Members</h5>
            <ul class="list-group">
                @foreach (var member in Model.Members)
                {
                    @* Logik: Visa om profilen INTE är privat ELLER om besökaren är inloggad *@
                    @if (!member.User.IsPrivate || isUserLoggedIn)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>@member.User.FirstName @member.User.LastName</span>
                            <a asp-controller="Cv" asp-action="Details" asp-route-id="@member.UserId" class="btn btn-sm btn-link text-decoration-none">View CV</a>
                        </li>
                    }
                }
                @if (!Model.Members.Any())
                {
                    <li class="list-group-item text-muted">No members have joined this project yet.</li>
                }
            </ul>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>

            @if (isUserLoggedIn && !Model.Members.Any(m => m.UserId == currentUserId))
            {
                <form asp-action="Join" method="post">
                    <input type="hidden" name="projectId" value="@Model.Id" />
                    <button type="submit" class="btn btn-success">Join Project</button>
                </form>
            }
        </div>
    </div>
</div>
