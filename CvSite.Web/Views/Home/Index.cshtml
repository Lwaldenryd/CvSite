@model CvSite.Web.Models.HomeIndexViewModel

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Welcome to CV-Site</h1>
        <p class="lead">Connect with professionals and join exciting projects.</p>
    </div>

    @* KRAV 1: SENASTE PROJEKTET *@
    <div class="row mb-5">
        <div class="col-12">
            <h3 class="fw-bold mb-3">Latest Project</h3>
            @if (Model.LatestProject != null)
            {
                <div class="card shadow-sm border-primary">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h4 class="card-title text-primary">@Model.LatestProject.Title</h4>
                                <p class="card-text">@Model.LatestProject.Description</p>
                                <p class="text-muted small">Created by: @(Model.LatestProject.Owner?.FirstName ?? "Anonymous")</p>
                            </div>
                            <a asp-controller="Projects" asp-action="Details" asp-route-id="@Model.LatestProject.Id" class="btn btn-primary">Check it out!</a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <p class="text-muted">No projects found yet.</p>
            }
        </div>
    </div>

    @* KRAV 1: URVAL AV CVs *@
    <h3 class="fw-bold mb-4">Featured Professionals</h3>
    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var user in Model.FeaturedCvs)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 bg-light text-center p-3">
                    @if (user.ProfilePicture != null)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(user.ProfilePicture)"
                             class="rounded-circle mx-auto mb-3 shadow-sm"
                             style="width: 100px; height: 100px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="bg-secondary text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center shadow-sm"
                             style="width: 100px; height: 100px; font-size: 2rem;">
                            👤
                        </div>
                    }
                    <h5 class="card-title">@user.FirstName @user.LastName</h5>
                    <a asp-controller="Cv" asp-action="Details" asp-route-id="@user.Id" class="btn btn-outline-primary mt-auto">View CV</a>
                </div>
            </div>
        }
    </div>
</div>
