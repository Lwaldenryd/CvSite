
@model CvSite.Web.Models.CvViewModel

@{
    ViewData["Title"] = "CV - " + Model.User.FirstName;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4 text-center">
            @if (Model.User.ProfilePicture != null)
            {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.User.ProfilePicture)"
                     class="img-fluid rounded-circle mb-3" style="max-width: 200px;" />
            }
            <h2>@Model.User.FirstName @Model.User.LastName</h2>
            <p class="text-muted">@Model.User.Address</p>
            <hr />
            <p>@Model.User.Email</p>
        </div>

        <div class="col-md-8">
            <h3>Erfarenheter</h3>
            @foreach (var exp in Model.Experiences)
            {
                <div class="mb-3">
                    <strong>@exp.Role</strong> på @exp.Company<br />
                    <small>@exp.StartDate.ToShortDateString() - @(exp.EndDate?.ToShortDateString() ?? "Nuvarande")</small>
                </div>
            }

            <h3 class="mt-4">Kompetenser</h3>
            @foreach (var comp in Model.Competences)
            {
                <span class="badge bg-primary">@comp.Name</span>
            }
        </div>
    </div>
</div>

